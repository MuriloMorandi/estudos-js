{
	"extends": "@estudos/typescript-config/base.json",
	"compilerOptions": {
		"declaration": true,
		"outDir": "dist",
		"baseUrl": "./src",
		"paths": {
			"@config/*": ["config/*"],
			"@controllers/*": ["controllers/*"],
			"@models/*": ["models/*"],
			"@routes/*": ["routes/*"],
			"@schemas/*": ["schemas/*"],
			"@middlewares/*": ["middlewares/*"],
			"@interfaces/*": ["interfaces/*"],
			"@services/*": ["services/*"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
