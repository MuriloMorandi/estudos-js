{
  "name": "@estudos/express",
  "version": "1.0.0",
  "license": "ISC",
  "scripts": {
    "dev": "tsx --env-file=.env --watch src/server.ts",
    "build": "tsc",
    "start": "tsx dist/server.js",
    "db:push": "drizzle-kit push",
    "db:gen": "drizzle-kit generate",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=src/__tests__/integration",
    "test:unit": "jest --testPathPattern=src/__tests__/unit",
    "test:schema": "jest --testPathPattern=src/__tests__/unit/schema",
    "test:e2e": "jest --testPathPattern=src/__tests__/e2e -- --detectOpenHandles"
  },
  "dependencies": {
    "@libsql/client": "^0.14.0",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.37.0",
    "express": "^4.21.2",
    "nanoid": "^5.0.9",
    "supertest": "^7.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.3.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.1",
    "@types/supertest": "^6.0.2",
    "drizzle-kit": "^0.29.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "packageManager": "pnpm@9.6.0"
}
