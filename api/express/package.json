{
	"name": "@estudos/express",
	"version": "1.0.0",
	"license": "ISC",
	"scripts": {
		"dev": "tsx --env-file=.env --watch src/server.ts",
		"build": "tsc",
		"start": "tsx dist/server.js",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:integration": "jest --testPathPattern=src/__tests__/integration",
		"test:unit": "jest --testPathPattern=src/__tests__/unit",
		"test:schema": "jest --testPathPattern=src/__tests__/unit/schema",
		"test:e2e": "jest --testPathPattern=src/__tests__/e2e -- --detectOpenHandles",
		"format": "biome format --write"
	},
	"dependencies": {
		"@estudos/main-db": "workspace:*",
		"cors": "^2.8.5",
		"drizzle-orm": "^0.39.0",
		"express": "^4.21.2",
		"nanoid": "^5.0.9",
		"supertest": "^7.0.0",
		"zod": "^3.24.1"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@estudos/biome-config": "workspace:*",
		"@estudos/typescript-config": "workspace:*",
		"@faker-js/faker": "^9.3.0",
		"@types/cors": "^2.8.17",
		"@types/express": "^5.0.0",
		"@types/jest": "^29.5.14",
		"@types/node": "^22.10.1",
		"@types/supertest": "^6.0.2",
		"jest": "^29.7.0",
		"ts-jest": "^29.2.5",
		"tsx": "^4.19.2",
		"typescript": "^5.4.5"
	},
	"packageManager": "pnpm@9.6.0"
}
